{
  "version": "1.0.0",
  "title": "Database Connection Failure",
  "description": "Test application resilience when database becomes unavailable",
  "tags": [
    "database",
    "infrastructure",
    "availability"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "APP_URL",
      "default": "http://localhost:80"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application is healthy and responding",
    "probes": [
      {
        "name": "dungeon-solve-endpoint-available",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "${app_url}/dungeon/solve",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": [[1,2],[3,4]]
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "stop-database-container",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": ["stop", "dungeon-game-kata-db-1"]
      }
    },
    {
      "type": "probe",
      "name": "verify-database-is-down",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "ps",
          "--filter",
          "name=dungeon-game-kata-db-1",
          "--format",
          "table {{.Names}}\t{{.Status}}"
        ]
      },
      "tolerance": {
        "type": "regex",
        "pattern": "Exited"
      }
    },
    {
      "type": "probe",
      "name": "check-application-response-after-db-failure",
      "provider": {
        "type": "http",
        "url": "${app_url}/dungeon/solve",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json"
        },
        "arguments": [[1,2],[3,4]]
      },
      "tolerance": {
        "type": "range",
        "range": [200, 299],
        "target": "status"
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "restart-database-container",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": ["start", "dungeon-game-kata-db-1"]
      }
    },
    {
      "type": "probe",
      "name": "wait-for-database-recovery",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["10"]
      }
    }
  ]
}
