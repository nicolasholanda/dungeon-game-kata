{
  "version": "1.0.0",
  "title": "Memory Exhaustion",
  "description": "Test application resilience when memory is fully exhausted",
  "tags": [
    "database",
    "infrastructure",
    "availability"
  ],
  "configuration": {
    "app_url": {
      "type": "env",
      "key": "APP_URL",
      "default": "http://localhost"
    }
  },
  "steady-state-hypothesis": {
    "title": "Application is healthy and responding",
    "probes": [
      {
        "name": "dungeon-solve-endpoint-available",
        "type": "probe",
        "provider": {
          "type": "http",
          "url": "${app_url}/dungeon/solve",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": [[1,2],[3,4]]
        },
        "tolerance": {
          "type": "range",
          "range": [200, 299],
          "target": "status"
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "consume-memory",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "exec", "-d",
          "dungeon-game-kata-app-1",
          "stress-ng", "--vm", "1", "--vm-bytes", "90%", "--timeout", "120s"
        ]
      }
    },
    {
      "type": "probe",
      "name": "memory-usage-percentage",
      "provider": {
        "type": "process", 
        "path": "docker",
        "arguments": [
          "exec", "dungeon-game-kata-app-1",
          "sh", "-c",
          "sleep 10 ; free | awk 'NR==2{printf \"Memory Usage: %.2f%%\\n\", $3*100/($3+$7)}'"
        ]
      },
      "tolerance": {
        "type": "regex",
        "target": "stdout", 
        "pattern": "Memory Usage: ([0-9.]+)%",
        "count": 1
      }
    },
    {
      "type": "probe",
      "name": "check-application-response-after-db-failure",
      "provider": {
        "type": "http",
        "url": "${app_url}/dungeon/solve",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json"
        },
        "arguments": [[1,2],[3,4]]
      },
      "tolerance": {
        "type": "range",
        "range": [200, 299],
        "target": "status"
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "stop-stress-in-container",
      "provider": {
        "type": "process",
        "path": "docker",
        "arguments": [
          "exec",
          "dungeon-game-kata-app-1",
          "pkill", "-f", "stress-ng"
        ]
      }
    },
    {
      "type": "probe",
      "name": "wait-for-database-recovery",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["10"]
      }
    }
  ]
}
